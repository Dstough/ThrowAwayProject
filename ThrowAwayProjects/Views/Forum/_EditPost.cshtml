@model PostViewModel;

<div class="modal-header">
    <span type="button" class="close" data-dismiss="modal">&times;</span>
    <h4 class="modal-title">Edit Post</h4>
</div>
<form asp-controller="Forum" asp-action="EditPost" method="post" id="PostForm" role="form">
    <div class="modal-body">
        <div class="form-group">
            <textarea id="Body" class="form-control" name="Body" placeholder="Post Body" autocomplete="off"></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <button id="submit" class="btn btn-primary">Edit</button>
    </div>
</form>
<script>
    $(function () {
        BindModalValidation("ThreadForm", ["Body"], "submit", function() {
            var action = '@Url.Action("EditPost","Forum")';
            var tag = "@Model.Id";
            var model = {
                Body : $('#Body').val()
            };
            Submit(action, model, tag);
        });
    });
</script>
@model ListViewModel

<div class="thread">
    <h2>User Threads</h2><br />
    <div id="navigation" class="page-navigation"></div><br />
    @if (Model.threads.Count == 0)
    {
        <article >
            <div class="text-center">
                No Records To Display.
            </div>
        </article>
    }
    @foreach (var thread in Model.threads)
    {
        <article>
            <div class="thread-metadata text-muted">
                <span style="@thread.Style">@thread.Author</span> -
                <span>@thread.PostDate.ToString("MMMM dd, yyyy")</span>
            </div>
            <div style="text-align:justify;">
                <h3 class="message-head" onclick=""><a href="@thread.Url">@thread.Title</a></h3>
                <span class="message-body">@thread.Body</span>
            </div>
        </article>
    }
</div>
<script>
    $(function () {
        RenderPageNavigation('/forum/list', @Model.page, @Model.threads.Count, @Model.maxRecordCount, 'navigation');
    });
</script>
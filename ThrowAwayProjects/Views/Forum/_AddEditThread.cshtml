@model ThreadViewModel

<div class="modal-header">
    <span type="button" class="close" data-dismiss="modal">&times;</span>
    <h4 class="modal-title">Thread</h4>
</div>
<form asp-controller="Forum" asp-action="AddEditThread" method="post" id="ThreadForm" role="form">
    <div class="modal-body">
        <div class="form-group">
            <input id="Title" class="form-control" name="Title" placeholder="Thread Description" value="@Model.Title" autocomplete="off">
        </div>
        <div class="form-group">
            <textarea id="Body" class="form-control" name="Body" placeholder="Thread Body" value="@Model.Body" autocomplete="off"></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <button id="submit" class="btn btn-primary">Publish Thread</button>
    </div>
</form>
<script>
    $(function () {
        BindModalValidation("ThreadForm", ["Body", "Title"], "submit");
    });
</script>
@model HomeViewModel;
@if (Model.ErrorMessage != null)
{
    <script>
        $(function() {
            DisplayMessage('@Model.ErrorMessage');
        });
    </script>
    Model.ErrorMessage = null;
}

<h2>News Stories</h2>
<br />
<a href="#">view all</a>
<br />
<div style="margin-bottom: 30px">
    @for (var i = 0; i < 3; i++)
    {<div class="grid-card">
            <div class="img">
                <img src="images/example.png" alt="" />
            </div>
            <a href="#">Article Title</a>
        </div>}
</div>

<h2>User Threads</h2>
<br />
<a href='/Forum/List/1'>view all</a>
<div style="margin-bottom: 30px">
    @foreach (var thread in Model.UserThreads)
    {<article>
            <div class="thread-metadata text-muted">
                <span style="@thread.Style">@thread.Author</span> -
                <span>@thread.PostDate.AddYears(60).ToString("MMMM dd, yyyy hh:mm tt")</span>
            </div>
            <div style="text-align:justify;">
                <h3 class="message-head" onclick=""><a href="@thread.Url">@thread.Title</a></h3>
                <span class="message-body">@thread.Body</span>
            </div>
        </article>}
</div>


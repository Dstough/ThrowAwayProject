@model UpdateViewModel

<div class="modal-header">
    <span type="button" class="close" data-dismiss="modal">&times;</span>
    <h4 class="modal-title">Account Information</h4>
</div>

<div class="modal-body">
    <h3>@Model.Email</h3>
    <span>[<a href='@Url.Action("ChangeEmail","Account")'>change email</a>]</span>
    <br /><br />
    <div class="form-group">
        <input id="UserName" class="form-control" name="UserName" placeholder="username" value="@Model.UserName" autocomplete="off">
    </div>
    <hr />
    <div class="form-group">
        <input id="NewPassphrase" type="password" class="form-control" name="NewPassphrase" placeholder="new Passphrase">
    </div>
    <div class="form-group">
        <input id="ConfirmPassphrase" type="password" class="form-control" name="ConfirmPassphrase" placeholder="confirm Passphrase">
    </div>
    <hr />
    <span class='message-body'>
        You can update your handle, Passphrase, or email address.
        It won't hide you or erase your previous posts.
        Your name will be updated on them.
    </span>
    <div class='message-signature admin-color'> Fastjack</div>
</div>

<div class="modal-footer">
    <button id="submit" class="btn btn-primary">Update Account Info</button>
</div>

<script>
    $(function () {
        BindModalValidation('update', ['UserName', 'Email'], 'submit', function() {
            Submit('@Url.Action("Update","Account")', {
                UserName : $('#UserName').val(),
                Email : $('#Email').val(),
                NewPassphrase : $('#NewPassphrase').val(),
                ConfirmPassphrase : $('#ConfirmPassphrase').val()
            },'userLabel');
        });
    });
</script>
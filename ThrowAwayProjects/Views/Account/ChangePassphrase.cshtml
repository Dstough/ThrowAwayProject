@model ChangePassphraseViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Change Passphrase</h4>
</div>
@using(Html.BeginForm("LogIn", "Account"))
{
    <div class="modal-body">
        <div style="width:49%;display:inline-block;">
            <span class="message-body">
                Make sure that the new passphrase you set is not used anywhere else.
            </span>
            <div class="message-signature admin-color">
                -- Fastjack
            </div>
        </div>
        <div style="width:50%;display:inline-block;vertical-align:top;">
            <div class="form-group">
                <input id="NewPassphrase" type="password" class="form-control" name="NewPassphrase" placeholder="passphrase">
            </div>
            <div class="form-group">
                <input id="ConfirmPassphrase" type="password" class="form-control" name="ConfirmPassphrase" placeholder="confirm">
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" id="submit" class="btn btn-primary">Change Passphrase</button>
    </div>
}
@model AccountViewModel;
<div class="col-sm-2"></div>
<div class="col-sm-4" style="padding-top:25px;">
    <span class="message-head">Shadowrun</span> <span style="font-size:12pt;">>noun</span><br/>
    <span class="message-body">
        Any movement, action, or series of such made in carrying out plans which are illegal or quasilegal.
    </span><br/>
    <div class="message-signature">
        -- WorldWide WorldWatch, 2050 archive
    </div>
    @if(@Model.ErrorMessage != null)
    {
        <div id="errorMessage">
            <hr/>
            <span class="message-body">@Model.ErrorMessage</span>
            <div class="message-signature admin-color">-- Fastjack</div>
        </div>
    }
</div>
<div class="col-sm-4">
    <h2>Log In</h2>
    <h5>
        <a asp-area="" asp-controller="Account" asp-action="Register">Need an account?</a> | 
        <a asp-area="" asp-controller="Account" asp-action="Recovery">Forgot your passphrase?</a>
    </h5>
    <hr/>
    @using(Html.BeginForm("LogIn", "Account"))
    {
        <div class="form-group">
            <input id="username" type="text" class="form-control" name="UserName" placeholder="username">
        </div>
        <div class="form-group">
            <input id="passphrase" type="password" class="form-control" name="PassPhrase" placeholder="passphrase">
        </div>
        <hr/>
        <button type="submit" id="login" class="btn btn-primary" style="width:100%">login</button>
    }
</div>
<div class="col-sm-2"></div>

<script>
    $(function(){
        BindValidation(["username","passphrase"],"login");
    });
</script>
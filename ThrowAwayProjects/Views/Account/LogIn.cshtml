@model UserViewModel;
<div class="col-sm-2"></div>
<div class="col-sm-4" style="padding-top:25px;">
    <span class="message-head">Shadowrun</span> <span style="font-size:12pt;">>noun</span><br/>
    <span class="message-body">Any movement, action, or series of such made in carrying out plans which are illegal or quasilegal.</span><br/>
    <div class="message-signature">-- WorldWide WorldWatch, 2050 archive</div>
</div>
<div class="col-sm-4">
    <h2>Log In</h2>
    <h5><a asp-area="" asp-controller="Account" asp-action="Register">Don't Have an account?</a></h5>
    <hr/>
    @using(Html.BeginForm("LogIn", "Account"))
    {
        <div class="form-group">
            <input type="text" class="form-control" name="UserName" placeholder="username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="PassPhrase" placeholder="passphrase">
        </div>
        <hr/>
        <button type="submit" id="sendlogin" class="btn btn-primary" style="width:100%">login</button>
    }
</div>
<div class="col-sm-2"></div>
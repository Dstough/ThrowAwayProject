@model AccountViewModel;

<div class="modal-header">
    <span type="button" class="close" data-dismiss="modal">&times;</span>
    <h4 class="modal-title">Log In</h4>
</div>

<form asp-controller="Home" asp-action="Index" method="post" id="logInForm" role="form">
    <div class="modal-body">
        <h5>
            <a asp-area="" asp-controller="Account" asp-action="Register">sign up</a>
            <a asp-area="" asp-controller="Account" asp-action="Recovery">forgot passphrase</a>
        </h5>
        <hr />
        <div class="form-group">
            <input id="username" type="text" class="form-control" name="UserName" placeholder="username" autocomplete="off">
        </div>
        <div class="form-group">
            <input id="Passphrase" type="password" class="form-control" name="Passphrase" placeholder="Passphrase">
        </div>
    </div>
    <div class="modal-footer">
        <span id="login" class="btn btn-primary">Log In</span>
    </div>
</form>

<script>
    $(function () {
        BindModalValidation("logInForm", ["username", "Passphrase"], "login");
    });
</script>
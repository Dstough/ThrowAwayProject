@model VerificationViewModel;
<div class="col-sm-2"></div>
<div class="col-sm-4">
    <br/><br/>
    <span class="message-body">
        I have sent you a verification code.
        Check your email and type in the code.
        Or you could just copy and paste it, like everyone else.
    </span>
    <div class="message-signature admin-color">
        -- Fastjack
    </div>
    @if(@Model.ErrorMessage != null)
    {
        <div id="errorMessage">
            <hr/>
            <span class="message-body">@Model.ErrorMessage</span>
            <div class="message-signature admin-color">-- Fastjack</div>
        </div>
    }
</div>
<div class="col-sm-4">
    <h2>Verify</h2>
    <h5><a asp-area="" asp-controller="Account" asp-action="Login">Back to Login page.</a></h5>
    <hr/>
    <form asp-controller="Account" asp-action="Verify" method="post" id="VerifyForm" role="form">
        <div class="form-group">
            @Html.HiddenFor(m => m.UserId)
            <input id="code" type="text" class="form-control" name="inputGuid" placeholder="code" autocomplete="off">
        </div>
        <!--@Model.dbGuid-->
        <span id="verify" id="verify" class="btn btn-primary" style="width:100%">Verify</span>
    </form>
</div>
<div class="col-sm-2"></div>
<script>
    $(function(){
        BindValidation("VerifyForm", ["code"], "verify");
    });
</script>
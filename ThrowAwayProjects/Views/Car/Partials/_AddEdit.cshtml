@model CarViewModel;
@using(Html.BeginForm("AddEdit","Car",FormMethod.Post, new { id = "FormEditCar" }))
{
    <div class="modal-header bg-dark">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h2 class="modal-title">Car Information</h2>
        @Html.HiddenFor(m=>m.Id)
    </div>

    <div class='modal-body forms-inline'>
        
        <div class="input-group">
            <div class="input-group-addon">
                <div class="input-group-text">Make:</div>
            </div>
            @Html.TextBoxFor(m => m.Make, new{@class="form-control"})
        </div>

        <div class="input-group">
            <div class="input-group-addon">
                <div class="input-group-text">Model:</div>
            </div>
            @Html.TextBoxFor(m => m.Type, new{@class="form-control"})
        </div>

    </div>

    <div class='modal-footer'>
        @if(Model.Id == 0)
        {
            <input type="submit" id="btnSubmit" class="btn btn-primary" name="action" value="Add New" />
        }
        else
        {
            <input type="submit" id="btnSubmit" class="btn btn-primary" name="action" value="Edit Car" />
            <input type="submit" id="btnDelete" class="btn btn-danger pull-left" name="action" value="Delete">
        }
    </div>
    <script>
        $("#btnDelete").on("click", function(){
            return confirm("Are you sure you want to delete this Car?");
        });
    </script>
}

@model List<CarViewModel>;
<table class="table table-hover">
    <thead>
        <tr>
            @if(Model.Count > 0)
            {
                @foreach (var prop in Model[0].GetType().GetProperties())
                {
                    <th>@prop.Name</th>
                }
                <th>Edit</th>
            }
            else
            {
                <th>No records to display.</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @foreach (var prop in item.GetType().GetProperties())
                {
                    <td>@prop.GetValue(item,null)</td>
                }
                <td id="@item.Id" onclick='Modal("@Url.Action("Edit","Car",new{id=item.Id})");'><a class="edit"><span class="glyphicon glyphicon-pencil"></span></a></td>
            </tr>
        }
    </tbody>
</table>